section#Callback.Callback-Outer.Section.Container_Wide
  picture.BgImg
    source(media="(max-width: 320px)" srcset="./images/street_320.webp" type="image/webp")
    source(media="(min-width: 321px) and (max-width: 480px)" srcset="./images/street_480.webp" type="image/webp")
    source(media="(min-width: 481px) and (max-width: 640px)" srcset="./images/street_640.webp" type="image/webp")
    source(media="(min-width: 641px) and (max-width: 800px)" srcset="./images/street_800.webp" type="image/webp")
    source(media="(min-width: 641px) and (max-width: 800px)" srcset="./images/street_800.jpg" type="image/jpeg")
    source(media="(min-width: 801px) and (max-width: 1024px)" srcset="./images/street_1024.webp" type="image/webp")
    source(media="(min-width: 1025px) and (max-width: 1920px)" srcset="./images/street_1920.webp" type="image/webp")
    source(media="(min-width: 1025px) and (max-width: 1920px)" srcset="./images/street_1920.jpg" type="image/jpeg")
    source(media="(min-width: 1921px)" srcset="./images/street_2560.webp" type="image/webp")
    source(media="(min-width: 1921px)" srcset="./images/street_2560.jpg" type="image/jpeg")
    img(src="./images/street_1920.jpg", alt="Закажи обратный звонок")
  .Container
    .Callback
      h2.Section-BigText Подключайся и зарабатывай прямо сейчас!
      form.Callback-Form(action="#")
        .Input-Outer
          label(for="cbFio").Input-Label ФИО
            span.Input-Required *
            input.Input#cbFio(type="text" name="cbFio" placeholder="ФИО" required)
        .Input-Outer
          label(for="cbPhone").Input-Label Телефон
            span.Input-Required *
            input.Input#cbPhone(type="text" name="cbPhone" placeholder="Телефон" required)
        .Input-Outer
          label(for="cbCity").Input-Label Город
            span.Input-Required *
            input.Input#cbCity(type="text" name="cbCity" placeholder="Город" required)
        .Input-Outer
          input.InputCheckbox.PolicyAccept(type="checkbox" name="cbConfidentPolicy" id="cbConfidentPolicy" required)
          label.InputCheckbox-Label.InputCheckbox-Label_AlignTop.InputCheckbox-Label_Small(for="cbConfidentPolicy")
            span Согласен с&nbsp;
              a.InputCheckbox-Link(href="") политикой обработки персональных данных
        button.Button.Button_Center.Button-Submit Заказать обратный звонок